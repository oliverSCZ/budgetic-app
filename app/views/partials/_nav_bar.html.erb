 <header class="w-full h-[60px] px-[10%] m-auto flex justify-between items-center bg-[#3778c2] text-white <%= 'hidden' if current_page?(new_user_session_path) || current_page?(new_user_registration_path)%>">

<% if current_page?(root_path) %>
  <%= image_tag ("more.png"), class: "w-9" %>
<% else %>
  <%= link_to root_path do%>
      <%= image_tag ("arrow.png"), class: "w-1/3" %>
  <% end %>
<% end %>

<h1 class="text-lg tracking-widest"><%= controller_name.upcase %></h1>

  <nav class="navbar">
    <ul class="navLinks flex items-center gap-4">
      <% if user_signed_in? %>
        <li class="pl-2"><%= button_to "Logout", destroy_user_session_path, method: :delete, class:"bg-transparent hover:bg-blue-500 text-white-500 hover:text-white py-2 px-2 border border-blue-500 hover:border-transparent rounded" %></li>
        <% if current_user %>
          <%= link_to user_path(current_user.id) do %>
            <li class="bg-white text-[#11537d] px-2 py-1 rounded-md font-medium">
              <%= current_user.name %>
            </li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </nav>
</header>